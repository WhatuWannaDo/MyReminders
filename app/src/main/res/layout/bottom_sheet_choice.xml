<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bottomSheetChoiceReady"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:text="выполнено"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheetChoiceUpdate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bottomSheetChoiceUpdate"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:text="обновить"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheetChoiceDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bottomSheetChoiceDelete"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:text="удалить"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>